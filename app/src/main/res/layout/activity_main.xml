<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Custom"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:gravity="center_horizontal"
        android:text="@string/Title"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/InputA"
        android:layout_width="65sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Title"
        android:layout_marginStart="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginBottom="15sp"
        android:ems="10"
        android:inputType="phone"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/InputB"
        android:layout_width="65sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Title"
        android:layout_marginStart="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginBottom="15sp"
        android:layout_toEndOf="@+id/InputA"
        android:layout_toRightOf="@+id/InputA"
        android:ems="10"
        android:inputType="phone"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/InputC"
        android:layout_width="65sp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Title"
        android:layout_marginStart="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginBottom="15sp"
        android:layout_toEndOf="@+id/InputB"
        android:layout_toRightOf="@+id/InputB"
        android:ems="10"
        android:inputType="phone"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/InputC"
        android:layout_marginStart="15sp"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginEnd="15sp"
        android:layout_toEndOf="@+id/InputB"
        android:layout_toRightOf="@+id/InputB"
        android:text="@string/StartButton" />

    <Button
        android:id="@+id/SortButton"
        android:layout_width="142dp"
        android:layout_height="45dp"
        android:layout_below="@id/Button"
        android:layout_marginStart="15sp"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="15sp"
        android:layout_toEndOf="@+id/InputB"
        android:layout_toRightOf="@+id/InputB"
        android:text="@string/SortButton" />


    <TextView
        android:id="@+id/Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Button"
        android:layout_marginStart="15sp"
        android:layout_marginLeft="15sp"
        android:text="@string/Result"
        android:textColor="@color/white" />

</RelativeLayout>